{
  "name": "get-arduino-tools",
  "version": "1.0.3",
  "description": "Get Arduino Tools (`gat`) is a CLI that helps you easily download various Arduino tools",
  "keywords": [
    "arduino",
    "tool",
    "download",
    "clang"
  ],
  "bugs": {
    "url": "git+https://github.com/dankeboy36/get-arduino-tools/issues"
  },
  "repository": {
    "url": "git+https://github.com/dankeboy36/get-arduino-tools.git"
  },
  "license": "MIT",
  "author": "dankeboy36",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "src/index.d.ts",
  "bin": {
    "gat": "bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "src/index.d.ts"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:cli": "esbuild src/cli.js --bundle --platform=node --target=node22 --format=cjs --minify --outfile=dist/cli.cjs",
    "build:lib": "esbuild src/index.js --bundle --platform=node --target=node22 --format=cjs --minify --sourcemap --outfile=dist/index.cjs",
    "format": "prettier --write .",
    "release": "semantic-release",
    "test": "jest --coverage --verbose",
    "test:all": "npm run test && npm run test:slow",
    "pretest:slow": "npm run build:cli",
    "test:slow": "jest --config jest.config.slow.js"
  },
  "dependencies": {
    "@xhmikosr/decompress": "^10.0.1",
    "commander": "^12.1.0",
    "debug": "^4.4.0",
    "request-light": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.26.5",
    "@babel/preset-env": "^7.26.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@semantic-release/npm": "^10.0.4",
    "@semantic-release/release-notes-generator": "^11.0.3",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.24.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.4.7",
    "semantic-release": "^21.0.7",
    "tmp": "^0.2.3",
    "wait-for-expect": "^3.0.2"
  }
}
